<script>
  const NAV = (() => {
    function HANLDEnavShadow() {
      const nav = document.querySelector('nav');
      const SHOWshadow = (window.scrollY > 60);
      nav.setAttribute('data-shadowVisible', `${SHOWshadow}`)
    }
  return { HANLDEnavShadow }
  })();
  const EFFECTS = (() => {
    function SCROLLtoSlider(){
      const sliderPosition = document.querySelector('.section_inline_slider').getBoundingClientRect().top;
      window.scrollTo({ top: sliderPosition - 100, behavior: 'smooth'});
    }
    return { SCROLLtoSlider }
  })();

  window.addEventListener('DOMContentLoaded', () => { NAV.HANLDEnavShadow() })
  window.addEventListener('scroll', () => { NAV.HANLDEnavShadow() })

  const heroSliderBTN = document.querySelector('.btn.inverted.hero');
  heroSliderBTN.addEventListener('click', () => { EFFECTS.SCROLLtoSlider() })
</script>



