{% assign lang = request.locale.iso_code %}
{% if lang == 'en' %}
  {% assign lang = '' %}
{% endif %}
<p
  class="current_lang"
  data-lang="{{ lang }}"
  style="display: none;">{{ lang }}
</p>



<section class="hero" style="overflow: hidden;">
  <div class="container hero">
    <div class="textWrap_heroHome">
      <h5 class="heading_homeHero">{{ "home.topTitle_hero" | t }}</h5>
      <h1 class="title_homeHero">{{ "home.title_hero_upper" | t }}<br>{{ "home.title_hero_lower" | t }}</h1>
      <div class="btnWrap_hero">
        <a
          class="btn hero"
          href="{{ collections['badmintono-prekes'].url }}"
          data-scale>{{ "home.btnText_heroMain" | t }}</a>
        <div
          class="btn inverted hero"
          data-hover_grey
          data-scale>{{ "home.btnText_heroSecond" | t }}</div>
      </div>
    </div>
    <img
      class="img_Hero"
      src="{{ 'img_hero.png' | asset_url }}"
      alt="">
  </div>
  <div class="img_heroFade"></div>
  <img
    class="img_heroWave"
    src="{{ 'img_waveHero.svg' | asset_url }}"
    alt="">
</section>
<div class="home_fade"></div>
{% render 'inline_slider' %}
<div class="home_fade up"></div>



