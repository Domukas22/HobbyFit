</div>

<script>
  const nav = document.querySelector('nav');
  window
    .addEventListener('DOMContentLoaded', () => {
      nav.classList.add('no_shadow');
    })
    window
    .addEventListener('scroll', () => {
      window.scrollY > 60
        ? nav.classList.remove('no_shadow')
        : nav.classList.add('no_shadow');
    })

    document
    .querySelector('.btn.inverted.hero')
    .addEventListener('click', () => {
      const slider_top = document.querySelector('.section_inline_slider').getBoundingClientRect().top;
      window.scrollTo({
        top: slider_top - 100,
        behavior: 'smooth'
      });
    })
</script>



