  function _GETvariantQnt(variant_id) {
    let qnt_list = [];
    let qnt_result;
    //
    {% for variant in product.variants %}
      qnt_list.push([{{ variant.id }}, {{ variant.inventory_quantity }}]);
    {% endfor %};
    qnt_list.forEach(list_item => {
      if (list_item.includes(variant_id)) {
        qnt_result = list_item[1]
      }
    })
