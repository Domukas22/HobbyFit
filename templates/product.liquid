    btn_submitQuantity.addEventListener('click', () => {
        const qnt_info = GETqntInfo(GENERAL.FINDmatchedVariant())
  
        if (!parseInt(decoy.value) || parseInt(decoy.value) < 0) {
  
            // Shouldnt happen, because we hide it on input if its 0
